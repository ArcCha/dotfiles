# vim: ft=sshconfig

# Keep ssh connections alive
ServerAliveInterval 60
ServerAliveCountMax 5
# Try only keys that are explicitly listed in order to avoid
# too many authentication failures
IdentitiesOnly yes
ForwardAgent yes

Include config.d/softnet
Include config.d/sandbox
Include config.d/vbs-*

# Global
Host *github.com
  User arccha
  IdentityFile ~/.ssh/personal
Host bitbucket.org
  User arccha
  IdentityFile ~/.ssh/personal
Host gitlab.com
  User arccha
  IdentityFile ~/.ssh/personal

# KSI UJ
Host galadriel
  User arccha
  Hostname kogni3.ii.uj.edu.pl
  IdentityFile ~/.ssh/personal
Host arda
  User adam.piekarczyk
  Hostname arda.ksi.ii.uj.edu.pl
  IdentityFile ~/.ssh/personal
Host shire
  User adam.piekarczyk
  Hostname shire.ksi.ii.uj.edu.pl
  IdentityFile ~/.ssh/personal

# GMUM
Host access-1
  User apiekarczyk
  Hostname access-1.capdnet.ii.uj.edu.pl
  IdentityFile ~/.ssh/personal
Host *.capdnet
  User apiekarczyk
  ProxyJump access-1
  IdentityFile ~/.ssh/personal

# SSUJ
Host novix
  User root
  Hostname novix119.bj.uj.edu.pl
  IdentityFile ~/.ssh/personal
  ProxyJump galadriel

# VPS
Host palantir
  User arccha
  Hostname palantir.piekarczyk.io
  IdentityFile ~/.ssh/personal



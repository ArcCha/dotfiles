#!/usr/bin/env python

import argparse
import subprocess
import tempfile


def on(args):
    username = subprocess.check_output(
        [
            'bw',
            'get',
            'username',
            'git.softnet.com.pl',
        ],
        text=True,
    )
    password = subprocess.check_output(
        [
            'bw',
            'get',
            'password',
            'poczta.softnet.com.pl',
        ],
        text=True,
    )
    with tempfile.NamedTemporaryFile(mode='r+') as f:
        f.write(f'{username}\n{password}')
        f.seek(0)
        subprocess.run(
            [
                'sudo',
                'openvpn',
                '--config', f'/home/arccha/.config/openvpn/{args.name}.ovpn',
                '--auth-user-pass', f'{f.name}',
                '--daemon',
            ],
        )


def off(args):
    subprocess.run(['sudo', 'killall', 'openvpn'])


def parse_args():
    parser = argparse.ArgumentParser()
    subparsers = parser.add_subparsers()

    parser_on = subparsers.add_parser('on')
    parser_on.add_argument('name', type=str)
    parser_on.set_defaults(func=on)

    parser_off = subparsers.add_parser('off')
    parser_off.set_defaults(func=off)

    return parser.parse_args()


def main():
    args = parse_args()
    args.func(args)


if __name__ == '__main__':
    main()
